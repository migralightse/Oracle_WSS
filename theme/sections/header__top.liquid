<div class="header__top" style="background-color: {{ section.settings.bg_color }};">
	<p class="header__note" style="color: {{ section.settings.text_color }};">
		{{ section.settings.note_text }}
	</p>
</div>


{% schema %}
{
	"name": "Header Top",
	"settings": [
		{
			"type": "text",
			"id": "note_text",
			"label": "Текст повідомлення",
			"default": "Free worldwide shipping for orders over $200"
		},
		{
			"type": "color",
			"id": "text_color",
			"label": "Колір тексту",
			"default": "#ffffff"
		},
		{
			"type": "color",
			"id": "bg_color",
			"label": "Колір фону",
			"default": "#000000"
		}
	],
	"presets": [
		{
			"name": "Header Top",
			"category": "Header"
		}
	]
}
{% endschema %}
